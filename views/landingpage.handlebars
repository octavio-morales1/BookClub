{{!-- 
Layout for the landing page after successful login, showing featured book clubs and popular discussions 
--}}

<h1>Welcome to the Book Club Network</h1>

<div class="new-container">
    <div class="section">
        <h2>Featured Book Clubs</h2>
        {{#each bookClubs}}
            <div>
                <h3>{{this.name}}</h3>
                <p>{{this.description}}</p>
            </div>
        {{else}}
            <p>No featured book clubs available.</p>
        {{/each}}
    </div>

    <div class="section middle-section">
        <h2>Popular Discussions</h2>
        {{#each discussions}}
            <div>
                <h3>{{this.title}}</h3>
                <p>{{this.summary}}</p>
            </div>
        {{else}}
            <p>No active discussions found.</p>
        {{/each}}
    </div>
</div>

<footer>
    <p>Book Club Network by Allan and Octavio</p>
</footer>
